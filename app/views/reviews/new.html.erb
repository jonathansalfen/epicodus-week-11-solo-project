<h1>Add a review:</h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.label :content_body %>
  <%= f.text_field :content_body %>
  <%= f.label :product_id %>
  <%= f.number_field :product_id %>
  <%= f.submit %>
<% end %>
